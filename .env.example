# Bible RAG - Environment Variables Example
# Copy this file to .env and update the values as needed

# ===========================================
# PostgreSQL Configuration
# ===========================================
POSTGRES_USER=bible_user
POSTGRES_PASSWORD=bible_password
POSTGRES_DB=bible_rag
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ===========================================
# Neo4j Configuration (Phase 6 - Knowledge Graph)
# ===========================================
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password
NEO4J_URI=bolt://neo4j:7687

# ===========================================
# Ollama LLM Configuration
# ===========================================
OLLAMA_BASE_URL=http://ollama:11434
LLM_MODEL_NAME=gemma3:4b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ===========================================
# Embedding Model Configuration
# ===========================================
EMBED_MODEL_NAME=BAAI/bge-m3
EMBED_BATCH_SIZE=32
EMBED_USE_FP16=true
EMBED_DEVICE=cuda

# ===========================================
# RAG Parameters
# ===========================================
RRF_K=60
MAX_RETRIEVE_RESULTS=20
MAX_CONTEXT_TOKENS=4000
TOP_K_PERICOPES=5

# ===========================================
# Application Configuration
# ===========================================
APP_NAME=Bible RAG API
VERSION=0.1.0
DEBUG=false
API_V1_PREFIX=/api/v1

# ===========================================
# Security Configuration
# ===========================================
ADMIN_API_KEY=change-me-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173,http://localhost

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
